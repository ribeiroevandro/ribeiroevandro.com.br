---
import { SEO } from "astro-seo";
const { title, description } = Astro.props
const url = `https://ribeiroevandro.com.br${Astro.url.pathname}`
console.log(url)
---

<html lang="pt-BR">
  <head>
    <SEO
      title={title}
      canonical={url}
      description={description}
      openGraph={{
        basic: {
          title: "A Very Descriptive Title",
          type: "A type.",
          image: "https://user-images.githubusercontent.com/5182256/131216951-8f74f425-f775-463d-a11b-0e01ad9fce8d.png",
        }
      }}
      twitter={{
        creator: "@ribeiroevandro"
      }}
      extend={{
        // extending the default link tags
        link: [{ rel: "icon", href: "/favicon.ico" }],
        // extending the default meta tags
        meta: [
          {
            name: "twitter:image",
            content: "https://user-images.githubusercontent.com/5182256/131216951-8f74f425-f775-463d-a11b-0e01ad9fce8d.png",
          },
          { name: "twitter:title", content: "Tinker Tailor Soldier Spy" },
          { name: "twitter:description", content: "Agent" },
        ],
      }}
    />
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
  </head>
  <body class="flex items-center justify-center h-screen text-center">
      <slot /> <!-- seu conteúdo é injetado aqui -->
  </body>
</html>
